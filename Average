let currentMode = 'target';

function switchMode(mode) {
    currentMode = mode;
    document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
    event.target.classList.add('active');
    
    document.getElementById('targetModeInput').classList.toggle('hidden', mode !== 'target');
    document.getElementById('budgetModeInput').classList.toggle('hidden', mode !== 'budget');
    
    calculate();
}

function calculate() {
    const N = parseFloat(document.getElementById('currentShares').value) || 0;
    const A = parseFloat(document.getElementById('currentAvg').value) || 0;
    const P = parseFloat(document.getElementById('newPrice').value) || 0;

    const val1 = document.getElementById('val1');
    const val2 = document.getElementById('val2');
    const lbl1 = document.getElementById('label1');
    const lbl2 = document.getElementById('label2');

